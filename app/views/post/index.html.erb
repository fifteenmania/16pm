<table class="table">
    <thead>
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>작성일</th>
        </tr>
    </thead>
    <tbody>
        <% @posts.each do |post| %>
            <tr>
                <th><%= post.id %></th>
                <th><a href="/bulletin/view/<%=post.id%>"><%= post.title %></a></th>
                <th><%= post.created_at %></th>
            </tr>
        <% end %>
    </tbody>
</table>
<button><a href="/bulletin/new">새 글</a></button>