          </ul>
          
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><a href="/signout">로그아웃</a></li>
            <% else %>
              <li><a href="/signin">로그인</a></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <!--contents-->
    <%= yield %>
